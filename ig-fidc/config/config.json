{
  "handler": {
    "name": "_router",
    "type": "Router"
  },
  "properties": {
    "frConfigs": {
      "$location": "${fileToUrl(openig.configDirectory)}/frProps.json"
    }
  },
  "heap": [
    {
      "name": "FileSystemSecretStore-1",
      "type": "FileSystemSecretStore",
      "config": {
        "format": "BASE64",
        "directory": "${openig.configDirectory}/secrets"
      }
    },
    {
      "name": "capture",
      "type": "CaptureDecorator",
      "config": {
        "captureEntity": false,
        "captureContext": false
      }
    },
    {
      "name": "XForwardedHeader",
      "type": "HeaderFilter",
      "comment": "Add a header to all requests",
      "config": {
        "messageType": "REQUEST",
        "add": {
          "X-Forwarded-For": [
            "${contexts.client.remoteAddress} "
          ]
        }
      }
    },
    {
      "name": "FIDCClientHandler",
      "type": "Chain",
      "config": {
        "filters": [
          "TransactionIdOutboundFilter",
          "XForwardedHeader"
        ],
        "handler": {
          "type": "Delegate",
          "config": {
            "delegate": "SharedClientHandler"
          },
          "capture": "all"
        }
      }
    },
    {
      "name": "SharedClientHandler",
      "type": "ClientHandler",
      "config": {
        "protocolVersion": "HTTP/1.1"
      }
    },
    {
      "name": "JSONAuditService",
      "type": "AuditService",
      "config": {
        "eventHandlers": [
          {
            "class": "org.forgerock.audit.handlers.json.JsonAuditEventHandler",
            "config": {
              "name": "json",
              "logDirectory": "${openig.baseDirectory.path}/${frConfigs.igAuditDir}",
              "topics": [
                "access"
              ],
              "buffering": {
                "maxSize": 100000,
                "writeInterval": "100 ms"
              },
              "rotationRetentionCheckInterval": "1 m"
            }
          }
        ]
      }
    },
    {
      "name": "hostHeader",
      "type": "HeaderFilter",
      "config": {
        "messageType": "REQUEST",
        "remove": [
          "host"
        ],
        "add": {
          "host": [
            "${frConfigs.amHost}"
          ]
        }
      }
    }
  ]
}
