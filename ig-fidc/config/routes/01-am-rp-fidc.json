{
  "globalDecorators": {
    "capture": "all"
  },
  "baseURI": "${frConfigs.amUrl}",
  "condition": "${matches(request.uri.path,'^/am')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "hostHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "remove": [
              "host"
            ],
            "add": {
              "host": [
                "${frConfigs.amHost}"
              ]
            }
          }
        }
      ],
      "handler": "FIDCClientHandler"
    }
  }
}
