{
  "baseURI": "http://am7.example.com:8086",
  "capture": "all",
  "condition": "${contains(request.uri.path, '/')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "hostHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "remove": [ "host" ],
            "add": {
              "host": [
                "am7.example.com:8086"
              ]
            }
          },
          "capture": "all"
        }
      ],
      "handler": "FRClientHandler"
    },
    "capture": "all"
  }
}
