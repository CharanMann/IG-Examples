{
  "globalDecorators": {
    "capture": "all"
  },
  "auditService": "JSONAuditService",
  "baseURI": "http://am7.example.com:8086",
  "condition": "${contains(request.uri.path, '/am')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "hostHeader",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "remove": [
              "host"
            ],
            "add": {
              "host": [
                "am7.example.com:8086"
              ]
            }
          }
        }
      ],
      "handler": "FRClientHandler"
    }
  }
}
